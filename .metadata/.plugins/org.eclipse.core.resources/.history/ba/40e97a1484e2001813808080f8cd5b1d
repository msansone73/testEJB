package br.msansone.testEJB;

import javax.ejb.Stateless;
import javax.jws.WebMethod;
import javax.jws.WebParam;
import javax.jws.WebService;
 
@Stateless
@WebService
public class BasicWebService {

	public BasicWebService() {
	}
 
	@WebMethod
	public String criarMensagem(@WebParam(name = "nome") String nome) {
 	 return "Ola " + nome + " seja bem vinda a critical!" + System.currentTimeMillis();
	}
	
	@WebMethod
	public Resultado calculaJuros(
			@WebParam(name = "valInicial") Double valor, 
			@WebParam(name = "juros") Double juros, 
			@WebParam(name = "anos") Integer anos ) {
		
		Double ValFuturo;
		ValFuturo = valor*(1 + juros*anos);
		
		Resultado r = new Resultado();
		r.setValFuturo(ValFuturo);
		r.setValJuros(0);
		r.setValJurosAnos(0);
		
		
// 	 return "Ola O valor futuro será " + ValFuturo + ". " + System.currentTimeMillis();
		return r;
	}

}
